<!-- src/views/mfa-setup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Setup MFA | Mountain Auth</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h1 class="title">Setup MFA</h1>
      </div>
      
      <div class="card-body">
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        
        <div style="text-align: center; margin-bottom: 2rem;">
          <p>Scan this QR code with your authenticator app (Google Authenticator, Authy, etc.)</p>
          <img src="<%= qrCodeUrl %>" alt="QR Code" style="margin: 1rem auto; display: block; max-width: 200px;">
          <p>Or manually enter this code: <strong><%= secret %></strong></p>
        </div>
        
        <form action="/auth/mfa/setup" method="POST">
          <div class="form-group">
            <label for="token">Verification Code</label>
            <input 
              type="text" 
              id="token" 
              name="token" 
              class="form-control" 
              placeholder="Enter 6-digit code" 
              required 
              autofocus
              pattern="[0-9]{6}"
              inputmode="numeric"
              autocomplete="one-time-code"
            >
          </div>
          
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Verify & Enable MFA</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>