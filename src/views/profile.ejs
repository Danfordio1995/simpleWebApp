<!-- src/views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile | Mountain Auth</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .profile-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
    }
    
    .profile-card {
      background-color: var(--glass-bg);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-radius: 1rem;
      border: 1px solid var(--glass-border);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      margin-bottom: 2rem;
    }
    
    .profile-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--border-color);
    }
    
    .profile-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0;
    }
    
    .profile-body {
      padding: 1.5rem;
    }
    
    .profile-section {
      margin-bottom: 2rem;
    }
    
    .section-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px solid var(--border-color);
    }
    
    .profile-row {
      display: flex;
      margin-bottom: 1rem;
    }
    
    .profile-label {
      width: 150px;
      font-weight: 500;
    }
    
    .profile-value {
      flex: 1;
    }
    
    .mfa-status {
      display: inline-block;
      padding: 0.25rem 0.5rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 600;
    }
    
    .status-enabled {
      background-color: rgba(46, 204, 113, 0.2);
      color: #2ecc71;
    }
    
    .status-disabled {
      background-color: rgba(231, 76, 60, 0.2);
      color: #e74c3c;
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <header class="dashboard-header">
      <a href="/dashboard" class="logo">Mountain Auth</a>
      
      <div class="nav-links">
        <a href="/dashboard" class="nav-link">Dashboard</a>
        <a href="/profile" class="nav-link active">Profile</a>
        <% if (user.role === 'admin') { %>
          <a href="/admin" class="nav-link">Admin</a>
        <% } %>
      </div>
      
      <div class="user-info">
        <span class="username"><%= user.username %></span>
        <span class="role"><%= user.role %></span>
        <a href="/auth/logout" class="btn-outline">Logout</a>
      </div>
    </header>
    
    <main class="profile-container">
      <% if (success) { %>
        <div class="alert alert-success">
          <%= success %>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% } %>
      
      <div class="profile-card">
        <div class="profile-header">
          <h2 class="profile-title">Account Information</h2>
        </div>
        
        <div class="profile-body">
          <div class="profile-row">
            <div class="profile-label">Username</div>
            <div class="profile-value"><%= userProfile.username %></div>
          </div>
          
          <div class="profile-row">
            <div class="profile-label">Email</div>
            <div class="profile-value"><%= userProfile.email %></div>
          </div>
          
          <div class="profile-row">
            <div class="profile-label">Role</div>
            <div class="profile-value"><%= userProfile.role %></div>
          </div>
          
          <div class="profile-row">
            <div class="profile-label">Account Created</div>
            <div class="profile-value"><%= new Date(userProfile.createdAt).toLocaleString() %></div>
          </div>
        </div>
      </div>
      
      <div class="profile-card">
        <div class="profile-header">
          <h2 class="profile-title">Security Settings</h2>
        </div>
        
        <div class="profile-body">
          <div class="profile-section">
            <h3 class="section-title">Multi-Factor Authentication</h3>
            
            <div class="profile-row">
              <div class="profile-label">MFA Status</div>
              <div class="profile-value">
                <% if (userProfile.mfaEnabled) { %>
                  <span class="mfa-status status-enabled">Enabled</span>
                <% } else { %>
                  <span class="mfa-status status-disabled">Disabled</span>
                <% } %>
              </div>
            </div>
            
            <div style="margin-top: 1.5rem; text-align: center;">
              <% if (userProfile.mfaEnabled) { %>
                <form action="/profile/disable-mfa" method="POST" style="display: inline-block;">
                  <button type="submit" class="btn btn-primary" style="background-color: var(--danger-color);">
                    Disable MFA
                  </button>
                </form>
              <% } else { %>
                <a href="/auth/mfa/setup" class="btn btn-primary">
                  Enable MFA
                </a>
              <% } %>
            </div>
          </div>
          
          <div class="profile-section">
            <h3 class="section-title">Change Password</h3>
            
            <form action="/profile/change-password" method="POST">
              <div class="form-group">
                <label for="currentPassword">Current Password</label>
                <input type="password" id="currentPassword" name="currentPassword" class="form-control" required>
              </div>
              
              <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" required minlength="6">
                <small class="form-text">Password must be at least 6 characters long</small>
              </div>
              
              <div class="form-group">
                <label for="confirmPassword">Confirm New Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
              </div>
              
              <div style="text-align: center; margin-top: 1.5rem;">
                <button type="submit" class="btn btn-primary">Change Password</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
    
    <footer class="dashboard-footer">
      <p>&copy; <%= new Date().getFullYear() %> Mountain Auth | Beautifully Secure</p>
    </footer>
  </div>
</body>
</html>